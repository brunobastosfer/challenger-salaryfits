generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum MedicineType {
  fitoterapico
  Alopatico
  homeopatico
  similar
  generico
  referencia
  manipulado
}

model Medicine {
  id        String       @id @unique   @default(uuid())
  name      String
  description String
  price Float
  type      MedicineType @default(generico)
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
}
